<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.watchshop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Watch App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WatchShop" >

        <activity
            android:name=".LoginActivity"  android:exported="true"
            android:theme="@style/Theme.WatchShop"> <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>


        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.WatchShop">
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:exported="false" /> <activity
        android:name=".WatchDetailActivity"
        android:exported="false"
        android:parentActivityName=".MainActivity"/> <activity
        android:name=".FavouritesActivity"
        android:exported="false"
        android:parentActivityName=".MainActivity"/> </application>

</manifest>